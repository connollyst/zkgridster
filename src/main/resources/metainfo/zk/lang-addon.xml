<language-addon>
    <addon-name>zkgridster</addon-name>
    <depends>zul</depends>
    <language-name>xul/html</language-name>

    <version>
        <version-class>org.zkoss.gridster.Version</version-class>
        <version-uid>0.1</version-uid>
        <zk-version>7.0.0</zk-version>
        <!-- or later -->
    </version>

    <component>
        <component-name>gridster</component-name>
        <component-class>org.zkoss.gridster.Gridster</component-class>
        <widget-class>zul.gridster.Gridster</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/gridster.js</mold-uri>
        </mold>
    </component>

    <component>
        <component-name>griditem</component-name>
        <component-class>org.zkoss.gridster.GridItem</component-class>
        <widget-class>zul.gridster.GridItem</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/griditem.js</mold-uri>
            <css-uri>jquery.gridster.min.css</css-uri>
        </mold>
    </component>

</language-addon>